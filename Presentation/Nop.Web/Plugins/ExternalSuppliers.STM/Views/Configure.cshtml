@model Nop.Plugin.ExternalSuppliers.STM.Models.STMModel
@{
    Layout = "_ConfigurePlugin";
}

<form asp-controller="STM" asp-action="Configure" method="post">
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-body">
                <h4>STM settings</h4>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="EndpointAddress" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="EndpointAddress" />
                        <span asp-validation-for="EndpointAddress"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="MinimumStockCount" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="MinimumStockCount" />
                        <span asp-validation-for="MinimumStockCount"></span>
                    </div>
                </div>              
                <div class="form-group">
                    <div class="col-md-9 col-md-offset-3">
                        <input type="submit" name="save" class="btn bg-primary" value="@T("Admin.Common.Save")" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
<div class="field-validation-error">
    <h4>@Model.ErrorMessage</h4>
</div>
