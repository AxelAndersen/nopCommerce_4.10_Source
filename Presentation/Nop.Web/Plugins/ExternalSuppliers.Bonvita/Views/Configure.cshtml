@model Nop.Plugin.ExternalSuppliers.Bonvita.Models.BonvitaModel
@{
    Layout = "_ConfigurePlugin";
}

<form asp-controller="Bonvita" asp-action="Configure" method="post">
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-body">
                <h4>Bonvita settings</h4>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="FtpHost" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="FtpHost" />
                        <span asp-validation-for="FtpHost"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="User" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="User" />
                        <span asp-validation-for="User"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="Pass" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="Pass" />
                        <span asp-validation-for="Pass"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="CSVFileName" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="CSVFileName" />
                        <span asp-validation-for="CSVFileName"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-9 col-md-offset-3">
                        <input type="submit" name="save" class="btn bg-primary" value="@T("Admin.Common.Save")" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
<div class="field-validation-error">
    <h4>@Model.ErrorMessage</h4>
</div>