@using AO.Services.Orders.Models
@model List<AO.Services.Orders.Models.AOPresentationOrder>
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    Html.AddCssFileParts("~/Plugins/Nop.Plugin.Admin.OrderManagementList/Content/OrderStyles.css");
}

<form asp-controller="OrderManagement" asp-action="List" method="post">
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-body">
                <h4>Order management list</h4>
                <br /><br />
            </div>
        </div>
    </div>

    <hr />
    @foreach (AOPresentationOrder order in Model)
    {
    <div class="divSingleOrder">
        <span>@order.OrderId</span>|
        <span>@order.OrderDateTime</span>|
        <span>@order.ShippingInfo</span>
        @foreach (string[] item in order.PresentationOrderItems)
        {
            <span>@item[0]</span>
            <span> - </span>
            <span>@item[1]</span>
        }
    </div>
    }


</form>
