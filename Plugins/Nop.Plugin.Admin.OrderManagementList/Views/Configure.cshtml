@model Nop.Plugin.Admin.OrderManagementList.Models.OrderManagementConfigurationModel
@{
    Layout = "_ConfigurePlugin";
}
@inject Nop.Core.IWebHelper webHelper

<form asp-controller="OrderManagement" asp-action="Configure" method="post">
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-body">
                <h4>Order management settings</h4>
                <br /><br />

                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="WelcomeMessage" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="WelcomeMessage" />
                        <span asp-validation-for="WelcomeMessage"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="ListActive" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="ListActive" />
                        <span asp-validation-for="ListActive"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-9 col-md-offset-3">
                        <input type="submit" name="save" class="btn bg-primary" value="@T("Admin.Common.Save")" />
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>
<div class="field-validation-error">
    <h4>@Model.ErrorMessage</h4>
</div>
